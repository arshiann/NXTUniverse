<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ctech.nxtuniverse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ctech.nxtuniverse.Activity_Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ctech.nxtuniverse.Activity_About"
            android:label="About"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="nxtuniverse.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ctech.nxtuniverse.Activity_Control"
            android:label="Mission Control"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="nxtuniverse.CONTROL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ctech.nxtuniverse.Activity_OtherDevices"
            android:label="Other Devices"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="nxtuniverse.OTHER_DEVICES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ctech.nxtuniverse.Activity_Navigate"
            android:label="Navigate"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="nxtuniverse.NAVIGATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ctech.nxtuniverse.Activity_TiltToNavigate"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="nxtuniverse.TILT_NAVIGATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ctech.nxtuniverse.Activity_Joystick"
            android:label="@string/title_activity_activity__joystick" >
            <intent-filter>
                <action android:name="nxtuniverse.JOYSTICK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>